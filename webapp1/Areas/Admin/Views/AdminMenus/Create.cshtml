@model WebApp1.Areas.Admin.Models.AdminMenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>AdminMenu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label"></label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemLevel" class="control-label"></label>
                <input asp-for="ItemLevel" class="form-control" />
                <span asp-validation-for="ItemLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentLevel" class="control-label"></label>
                <input asp-for="ParentLevel" class="form-control" />
                <span asp-validation-for="ParentLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemOrder" class="control-label"></label>
                <input asp-for="ItemOrder" class="form-control" />
                <span asp-validation-for="ItemOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemTarget" class="control-label"></label>
                <input asp-for="ItemTarget" class="form-control" />
                <span asp-validation-for="ItemTarget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaName" class="control-label"></label>
                <input asp-for="AreaName" class="form-control" />
                <span asp-validation-for="AreaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ControllerName" class="control-label"></label>
                <input asp-for="ControllerName" class="form-control" />
                <span asp-validation-for="ControllerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionName" class="control-label"></label>
                <input asp-for="ActionName" class="form-control" />
                <span asp-validation-for="ActionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdName" class="control-label"></label>
                <input asp-for="IdName" class="form-control" />
                <span asp-validation-for="IdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<main id="main" class="main">
    <div class="container shadow p-4">
        <div class="pagetitle">
            <h2>Thêm mới Menu Admin</h2>
        </div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-row">
            <div class=" form-group col-md-6">
                    <label asp-for="ItemName">Tên menu</label>
                    <input type="text" class="form-control mb-3" asp-for="ItemName" placeholder="Nhập tên menu">
                    <span asp-validation-for="ItemName" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-6">
                    <label asp-for="ItemLevel">Cấp menu</label>
                    <select asp-for="ItemLevel" class="form-select" id="Levels">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>
        </div>
        <div class="tox-form-group--maximize col-md-6">
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="ParentLevel">Menu cha</label>
                <select asp-for="ParentLevel" class="form-control" asp-items="@(new SelectList(ViewBag.mnList,"Value", "Text"))"></select>
        </div>

        <div class="form-group col-md-6">
                <label asp-for="AreaName">AreaName</label>
                <input type="text" class="form-control mb-3" asp-for="AreaName" placeholder="Enter Link">
                <span asp-validation-for="AreaName" class=" alert-danger"></span>
        </div>

            <div class="form-group col-md-6">
                <label asp-for="ItemOrder">Thứ tự</label>
                <input type="text" class="form-control mb-3" asp-for="ItemOrder" placeholder="Enter MenuOrder">
                <span asp-validation-for="ItemOrder" class=" alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ControllerName">Vị trí</label>
                <input type="text" class="form-control mb-3" asp-for="ControllerName" placeholder="Enter Position">
                <span asp-validation-for="ControllerName" class=" alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionName" class="control-label"></label>
                <input asp-for="ActionName" class="form-control" />
                <span asp-validation-for="ActionName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mt-3 mb-3">
                <label class="btn btn-group-sm" style="background-color:0A7744;color: black">
                    @Html.CheckBox("IsActive", true)
                    Hiển thị
                </label>
            </div>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning"><i class="bi bi-box-arrow-in-left"></i> Quay lại</a>
            <button type="submit" value="Save" class="btn btn-lg btn-primary p-2"><i class="bi bi-clipboard-plus"></i> Thêm</button>
    </form>
    </div>
</main>
