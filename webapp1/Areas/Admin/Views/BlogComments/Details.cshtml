@model WebApp1.Models.BlogComment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="container shadow p-4">
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <h2>Bài viết: @Model.Blog.Title</h2>
                                    <p><strong>Ngày tạo:</strong> @Model.CreatedDate</p>
                                    <p><strong>Người bình luận:</strong> @Model.Account.FullName</p>
                                    <p><strong>Nội dung bình luận:</strong> @Model.Detail</p>
                                    <div class="mt-4">
                                        <a href="javascript:history.back()" class="btn btn-lg btn-warning"><i class="bi bi-box-arrow-in-left"></i> Quay lại</a> |
                                        <a asp-area="Admin" asp-controller="BlogComments" asp-action="Delete"
                                           asp-route-id="@Model.BlogCommentID" class="btn btn-danger "
                                           title="Xóa "><i class="bi bi-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>