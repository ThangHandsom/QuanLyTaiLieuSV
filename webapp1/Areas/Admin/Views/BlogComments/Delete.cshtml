@model WebApp1.Models.BlogComment
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="container shadow p-5">
        <div class="pagetitle">
            <h2>Xác nhận xóa bình luận</h2>
        </div>
        <div class="form-row">
            <div class="tox-form-group--maximize col-md-6">
                <label asp-for="BlogCommentID">Nội dung</label>
                <input type="text" class="form-control mb-3" asp-for="Detail" disabled>
            </div>
        </div>
        <!--begin form-->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="BlogCommentID" />
            <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
                <i class="bi bi-box-arrow-in-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-lg btn-danger p-2">
                <i class="bi bi-trash-fill"></i> Xóa
            </button>
        </form>
        <!--End Form-->
    </div>
</main>
