@model WebApp1.Models.Account

<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-8 offset-lg-2">
                <h2 class="mb-4">Cập nhật thông tin</h2>

                <form asp-controller="Account" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="image">Ảnh đại diện hiện tại</label>
                        <div class="mb-3">
                            <img id="preview" src="@Model.Image"
                                 alt="Avatar" class="img-thumbnail"
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        </div>

                        <div class="input-group mb-3">
                            <input type="file" class="form-control" id="imageUpload" name="imageFile" accept="image/*" onchange="previewImage(event)">
                        </div>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Tên đầy đủ</label>
                        <input type="text" name="fullName" class="form-control" value="@Model.FullName" placeholder="Nhập tên đầy đủ mới">
                    </div>

                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input type="text" name="phone" class="form-control" value="@Model.Phone" placeholder="Nhập số điện thoại mới">
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" value="@Model.Email" placeholder="Nhập email mới">
                    </div>

                    <div class="form-group">
                        <label for="classs">Lớp</label>
                        <input type="text" name="classs" class="form-control" value="@Model.Class" placeholder="Nhập lớp mới">
                    </div>

                    <div class="form-group">
                        <label for="studentcode">Mã sinh viên</label>
                        <input type="text" name="studentcode" class="form-control" value="@Model.StudentCode" placeholder="Nhập mã sinh viên mới">
                    </div>

                    <div class="form-group">
                        <label for="birth">Ngày sinh</label>
                        <input type="date" name="birth" class="form-control mb-3"
                               value="@Model.Birth?.ToString("yyyy-MM-dd")" />
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Cập nhật</button> |
                    <a asp-action="Profile" class="btn btn-secondary">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function () {
            const output = document.getElementById('preview');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
