@model WebApp1.Models.Account

<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-8 offset-lg-2">
                <div class="card profile-container text-center shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3>Thông tin cá nhân</h3>
                    </div>
                    <img class="card-img-top profile-image rounded-circle mx-auto mt-3"
                         src="@Model.Image"
                         alt="Avatar"
                         style="width: 150px; height: 150px; object-fit: cover;">

                    <div class="card-body">
                        <h5 class="card-title">@Model.FullName</h5>
                        <p class="card-text">
                            <strong>Tên đăng nhập:</strong> @Model.UserName<br>
                            <strong>Email:</strong> @Model.Email<br>
                            <strong>Số điện thoại:</strong> @Model.Phone<br>
                            <strong>Lớp:</strong> @Model.Class<br>
                            <strong>Ngày sinh:</strong> @Model.Birth?.ToString("dd-MM-yyyy")<br>
                            <strong>Giới tính:</strong> @Model.Gender<br>
                        </p>
                        <a asp-action="UpdateProfile" class="btn btn-primary">Cập nhật thông tin</a> |
                        <a asp-action="ChangePassword" class="btn btn-secondary">Đổi mật khẩu</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
